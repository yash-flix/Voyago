<% layout("/layouts/boilerplate.ejs") %>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>

<style>
  body {
    background: linear-gradient(135deg, #f0f8ff 0%, #e6f3ff 50%, #dbeafe 100%);
    min-height: 100vh;
    font-family: "Plus Jakarta Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    color: #2d3748;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .listing-header {
    margin-bottom: 3rem;
  }

  .listing-gallery {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: 300px 150px;
    gap: 12px;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .main-image {
    grid-row: 1 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .side-image-1, .side-image-2 {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: #e2e8f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #a0aec0;
    font-size: 0.9rem;
  }

  .listing-title {
    font-size: 2rem;
    font-weight: 600;
    color: #1a202c;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .listing-subtitle {
    color: #718096;
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .main-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .section {
    padding-bottom: 2rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .section:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #2d3748;
  }

  .description {
    line-height: 1.6;
    color: #4a5568;
    font-size: 1rem;
  }

  .amenities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .amenity-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
  }

  .amenity-icon {
    width: 20px;
    height: 20px;
    color: #4299e1;
  }

  .sidebar {
    position: sticky;
    top: 2rem;
  }

  .booking-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .price-display {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #1a202c;
  }

  .price-unit {
    font-size: 1rem;
    font-weight: 400;
    color: #718096;
  }

  .location-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    color: #4a5568;
    font-size: 0.95rem;
  }

  .action-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.95rem;
    text-decoration: none;
    text-align: center;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: #4299e1;
    color: white;
  }

  .btn-primary:hover {
    background: #3182ce;
    color: white;
    text-decoration: none;
  }

  .btn-secondary {
    background: white;
    color: #4a5568;
    border: 1px solid #e2e8f0;
  }

  .btn-secondary:hover {
    background: #f7fafc;
    text-decoration: none;
    color: #4a5568;
  }

  .btn-danger {
    background: #f56565;
    color: white;
  }

  .btn-danger:hover {
    background: #e53e3e;
  }

  hr {
    border: none;        
    height: 2px;         
    background-color: #e2e8f0; 
  }

  /* Map Styles */
  .map-section {
    margin-top: 2rem;
  }

  #map {
    height: 350px;
    width: 100%;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  @media (max-width: 768px) {
    .listing-gallery {
      grid-template-columns: 1fr;
      grid-template-rows: 250px;
    }

    .side-image-1, .side-image-2 {
      display: none;
    }

    .content-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .sidebar {
      position: static;
      order: -1;
    }

    .listing-title {
      font-size: 1.75rem;
    }

    .container {
      padding: 1rem;
    }

    #map {
      height: 250px;
    }
  }
</style>

<body>
  <div class="container">
    <h1 class="listing-title">Listing Details:</h1>
    <div class="listing-header">
      <div class="listing-gallery">
        <img src="<%= listing.image %>" class="main-image" alt="<%= listing.title %>">
        <div class="side-image-1">Additional Photo</div>
        <div class="side-image-2">Additional Photo</div>
      </div>
      
      <h1 class="listing-title"><%= listing.title %></h1>
      <p class="listing-subtitle"><%= listing.location %>, <%= listing.country %></p>
    </div>
    <hr>

    <div class="content-grid">
      <div class="main-content">
        <div class="section">
          <h2 class="section-title">About this place</h2>
          <p class="description"><%= listing.description %></p>
        </div>
        <hr> 

        <div class="section">
          <h2 class="section-title">What this place offers</h2>
          <div class="amenities-grid">
            <div class="amenity-item">
              <svg class="amenity-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
              </svg>
              <span>Great views</span>
            </div>
            <div class="amenity-item">
              <svg class="amenity-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v6a1 1 0 01-1 1h-4a1 1 0 01-1-1V8z" clip-rule="evenodd"/>
              </svg>
              <span>Modern amenities</span>
            </div>
            <div class="amenity-item">
              <svg class="amenity-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 14.846 4.632 16 6.414 16H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 6H6.28l-.31-1.243A1 1 0 005 4H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/>
              </svg>
              <span>Prime location</span>
            </div>
          </div>
        </div>

        <!-- Map Section -->
        <div class="section map-section">
          <h2 class="section-title">Location</h2>
          <div id="map"></div>
        </div>
      </div>

      <div class="sidebar">
        <div class="booking-card">
          <div class="price-display">
            ₹<%= listing.price.toLocaleString("en-IN") %><span class="price-unit"> / night</span>
          </div>
          
          <div class="location-info">
            <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
            </svg>
            <span><%= listing.location %>, <%= listing.country %></span>
          </div>

          <div class="action-buttons">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit Listing</a>
            <a href="/listings" class="btn btn-secondary">Back to Listings</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="margin: 0;">
              <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this listing?')" style="width: 100%;">Delete Listing</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Leaflet JavaScript -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
  <script>
    // Location mapping for different cities/countries
    function getCoordinates(location, country) {
      const locationMap = {
        'Malibu': [34.0259, -118.7798],
        'New York City': [40.7589, -73.9851],
        'Aspen': [39.1911, -106.8175],
        'Florence': [43.7696, 11.2558],
        'Portland': [45.5152, -122.6784],
        'Cancun': [21.1619, -86.8515],
        'Lake Tahoe': [39.0968, -120.0324],
        'Los Angeles': [34.0522, -118.2437],
        'Verbier': [46.0964, 7.2281],
        'Serengeti National Park': [-2.3333, 34.8333],
        'Amsterdam': [52.3676, 4.9041],
        'Fiji': [-17.7134, 178.0650],
        'Cotswolds': [51.8330, -1.8433],
        'Boston': [42.3601, -71.0589],
        'Bali': [-8.3405, 115.0920],
        'Banff': [51.4968, -115.9281],
        'Miami': [25.7617, -80.1918],
        'Phuket': [7.8804, 98.3923],
        'Scottish Highlands': [57.0000, -4.0000],
        'Dubai': [25.2048, 55.2708],
        'Montana': [47.0527, -109.6333],
        'Mykonos': [37.4467, 25.3289],
        'Costa Rica': [9.7489, -83.7534],
        'Charleston': [32.7765, -79.9311],
        'Tokyo': [35.6762, 139.6503],
        'New Hampshire': [43.4525, -71.5639],
        'Maldives': [3.2028, 73.2207]
      };

      return locationMap['<%= listing.location %>'] || [20.5937, 78.9629]; // Default to India center
    }

    window.addEventListener('load', function() {
      setTimeout(function() {
        try {
          const coordinates = getCoordinates('<%= listing.location %>', '<%= listing.country %>');
          
          // Initialize map
          const map = L.map('map').setView(coordinates, 13);

          // Add tile layer
          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
            maxZoom: 18
          }).addTo(map);

          // Add marker for the listing
          const marker = L.marker(coordinates).addTo(map);
          marker.bindPopup(`
            <div style="text-align: center; font-family: 'Plus Jakarta Sans', sans-serif;">
              <b style="color: #1a202c; font-size: 14px;"><%= listing.title %></b><br>
              <span style="color: #718096; font-size: 12px;"><%= listing.location %>, <%= listing.country %></span><br>
              <span style="color: #4299e1; font-weight: bold; font-size: 13px;">₹<%= listing.price.toLocaleString("en-IN") %>/night</span>
            </div>
          `).openPopup();

          console.log('Map initialized successfully for <%= listing.location %>');
        } catch (error) {
          console.error('Map initialization error:', error);
        }
      }, 500);
    });
  </script>
</body>