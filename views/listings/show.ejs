<% layout("/layouts/boilerplate.ejs") %>

<style>
  body {
    background: linear-gradient(135deg, #f0f8ff 0%, #e6f3ff 50%, #dbeafe 100%);
    min-height: 100vh;
    font-family: "Plus Jakarta Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    color: #2d3748;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .listing-header {
    margin-bottom: 3rem;
  }

  .listing-gallery {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: 300px 150px;
    gap: 12px;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .main-image {
    grid-row: 1 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .side-image-1, .side-image-2 {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: #e2e8f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #a0aec0;
    font-size: 0.9rem;
  }

  .listing-title {
    font-size: 2rem;
    font-weight: 600;
    color: #1a202c;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .listing-subtitle {
    color: #718096;
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .main-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .section {
    padding-bottom: 2rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .section:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #2d3748;
  }

  .description {
    line-height: 1.6;
    color: #4a5568;
    font-size: 1rem;
  }

  .amenities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .amenity-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
  }

  .amenity-icon {
    width: 20px;
    height: 20px;
    color: #4299e1;
  }

  .sidebar {
    position: sticky;
    top: 2rem;
  }

  .booking-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .price-display {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #1a202c;
  }

  .price-unit {
    font-size: 1rem;
    font-weight: 400;
    color: #718096;
  }

  .location-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    color: #4a5568;
    font-size: 0.95rem;
  }

  .action-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.95rem;
    text-decoration: none;
    text-align: center;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: #4299e1;
    color: white;
  }

  .btn-primary:hover {
    background: #3182ce;
    color: white;
    text-decoration: none;
  }

  .btn-secondary {
    background: white;
    color: #4a5568;
    border: 1px solid #e2e8f0;
  }

  .btn-secondary:hover {
    background: #f7fafc;
    text-decoration: none;
    color: #4a5568;
  }

  .btn-danger {
    background: #f56565;
    color: white;
  }

  .btn-danger:hover {
    background: #e53e3e;
  }
  hr {
  border: none;        
  height: 2px;         
  background-color: #000; 
}

  @media (max-width: 768px) {
    .listing-gallery {
      grid-template-columns: 1fr;
      grid-template-rows: 250px;
    }

    .side-image-1, .side-image-2 {
      display: none;
    }

    .content-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .sidebar {
      position: static;
      order: -1;
    }

    .listing-title {
      font-size: 1.75rem;
    }

    .container {
      padding: 1rem;
    }
  }
</style>

<body>
  <div class="container">
    <div class="listing-header">
      <div class="listing-gallery">
        <img src="<%= listing.image %>" class="main-image" alt="<%= listing.title %>">
        <div class="side-image-1">Additional Photo</div>
        <div class="side-image-2">Additional Photo</div>
      </div>
      
      <h1 class="listing-title"><%= listing.title %></h1>
      <p class="listing-subtitle"><%= listing.location %>, <%= listing.country %></p>
    </div>
    <hr>

    <div class="content-grid">
      <div class="main-content">
        <div class="section">
          <h2 class="section-title">About this place</h2>
          <p class="description"><%= listing.description %></p>
        </div>
        <hr> 

        <div class="section">
          <h2 class="section-title">What this place offers</h2>
          <div class="amenities-grid">
            <div class="amenity-item">
              <svg class="amenity-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
